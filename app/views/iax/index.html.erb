<%- model_class = Iax -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:bindport) %></th>
      <th><%= model_class.human_attribute_name(:bindaddr) %></th>
      <th><%= model_class.human_attribute_name(:disallow) %></th>
      <th><%= model_class.human_attribute_name(:bandwidth) %></th>
      <th><%= model_class.human_attribute_name(:allow) %></th>
      <th><%= model_class.human_attribute_name(:tos) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @iax.each do |iax| %>
      <tr>
        <td><%= link_to iax.id, iax_path(iax) %></td>
        <td><%= iax.bindport %></td>
        <td><%= iax.bindaddr %></td>
        <td><%= iax.disallow %></td>
        <td><%= iax.bandwidth %></td>
        <td><%= iax.allow %></td>
        <td><%= iax.tos %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_iax_path(iax), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      iax_path(iax),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_iax_path,
            :class => 'btn btn-primary' %>
