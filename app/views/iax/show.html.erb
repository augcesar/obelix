<%- model_class = Iax -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:bindport) %>:</strong></dt>
  <dd><%= @iax.bindport %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bindaddr) %>:</strong></dt>
  <dd><%= @iax.bindaddr %></dd>
  <dt><strong><%= model_class.human_attribute_name(:disallow) %>:</strong></dt>
  <dd><%= @iax.disallow %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bandwidth) %>:</strong></dt>
  <dd><%= @iax.bandwidth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:allow) %>:</strong></dt>
  <dd><%= @iax.allow %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tos) %>:</strong></dt>
  <dd><%= @iax.tos %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              iax_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_iax_path(@iax), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              iax_path(@iax),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
