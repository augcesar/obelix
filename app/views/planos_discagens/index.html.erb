<%- model_class = PlanoDiscagem -%>
<div class="page-header">
  <h1>Planos de Discagens<%#=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @planos_discagens.each do |plano_discagem| %>
      <tr>
        <td><%= link_to plano_discagem.id, plano_discagem_path(plano_discagem) %></td>
        <td><pre><%= plano_discagem.descricao %></pre></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_plano_discagem_path(plano_discagem), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      plano_discagem_path(plano_discagem),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_plano_discagem_path,
            :class => 'btn btn-primary' %>
