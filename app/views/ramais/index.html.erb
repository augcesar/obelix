<%- model_class = Ramal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:callerid) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= model_class.human_attribute_name(:secret) %></th>
      <th><%= model_class.human_attribute_name(:canreinvite) %></th>
      <th><%= model_class.human_attribute_name(:host) %></th>
      <th><%= model_class.human_attribute_name(:context) %></th>
      <th><%= model_class.human_attribute_name(:dtmfmode) %></th>
      <th><%= model_class.human_attribute_name(:call_limit) %></th>
      <th><%= model_class.human_attribute_name(:nat) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ramais.each do |ramal| %>
      <tr>
        <td><%= link_to ramal.id, ramal_path(ramal) %></td>
        <td><%= ramal.callerid %></td>
        <td><%= ramal.type %></td>
        <td><%= ramal.username %></td>
        <td><%= ramal.secret %></td>
        <td><%= ramal.canreinvite %></td>
        <td><%= ramal.host %></td>
        <td><%= ramal.context %></td>
        <td><%= ramal.dtmfmode %></td>
        <td><%= ramal.call_limit %></td>
        <td><%= ramal.nat %></td>
        <td><%=l ramal.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ramal_path(ramal), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ramal_path(ramal),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ramal_path,
            :class => 'btn btn-primary' %>
