<%- model_class = Ramal -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:callerid) %>:</strong></dt>
  <dd><%= @ramal.callerid %></dd>
<dt><strong><%= model_class.human_attribute_name(:ramal) %>:</strong></dt>
  <dd><%= @ramal.ramal %></dd>  
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @ramal.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @ramal.username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:secret) %>:</strong></dt>
  <dd><%= @ramal.secret %></dd>
  <dt><strong><%= model_class.human_attribute_name(:canreinvite) %>:</strong></dt>
  <dd><%= @ramal.canreinvite %></dd>
  <dt><strong><%= model_class.human_attribute_name(:host) %>:</strong></dt>
  <dd><%= @ramal.host %></dd>
  <dt><strong><%= model_class.human_attribute_name(:context) %>:</strong></dt>
  <dd><%= @ramal.context %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dtmfmode) %>:</strong></dt>
  <dd><%= @ramal.dtmfmode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:call_limit) %>:</strong></dt>
  <dd><%= @ramal.call_limit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nat) %>:</strong></dt>
  <dd><%= @ramal.nat %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ramais_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ramal_path(@ramal), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ramal_path(@ramal),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
