<%- model_class = Sip -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:context) %>:</strong></dt>
  <dd><%= @sip.context %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bindport) %>:</strong></dt>
  <dd><%= @sip.bindport %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bindaddr) %>:</strong></dt>
  <dd><%= @sip.bindaddr %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tos_sip) %>:</strong></dt>
  <dd><%= @sip.tos_sip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tos_audio) %>:</strong></dt>
  <dd><%= @sip.tos_audio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tos_video) %>:</strong></dt>
  <dd><%= @sip.tos_video %></dd>
  <dt><strong><%= model_class.human_attribute_name(:videosupport) %>:</strong></dt>
  <dd><%= @sip.videosupport %></dd>
  <dt><strong><%= model_class.human_attribute_name(:t38pt_udptl) %>:</strong></dt>
  <dd><%= @sip.t38pt_udptl %></dd>
  <dt><strong><%= model_class.human_attribute_name(:limitonpeers) %>:</strong></dt>
  <dd><%= @sip.limitonpeers %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sip_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sip_path(@sip), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sip_path(@sip),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
